<div class="card-container">
  <% @cocktails.each do |cocktail| %>

  <% if cocktail.photo.present? %>
    <div class="card"
      style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
      url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
  <% else %>
    <div class="card">
  <% end %>
      <%= cocktail.name %>

      <!--<%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY", width: 400, height: 300, crop: :fill) %> -->
      <%= link_to 'Show', cocktail, class: "green" %>
    </div>
  <% end %>
</div>
  <%= link_to 'Add Cocktail', new_cocktail_path, class: "btn btn-outline-success" %>
